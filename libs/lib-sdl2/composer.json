{
    "name": "bic-engine/lib-sdl2",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "psr/simple-cache": "^1.0|^2.0|^3.0",
        "ext-ffi": "*",
        "ffi/env": "^1.0",
        "ffi/proxy": "^1.0",
        "ffi/location": "^1.0",
        "ffi-headers/sdl2-headers": "^1.0",
        "ffi-headers/sdl2-image-headers": "^1.0",
        "ffi-headers/sdl2-ttf-headers": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Bic\\Lib\\": "src"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "symfony/var-dumper": "^5.4|^6.0",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.24"
    },
    "autoload-dev": {
        "psr-4": {
            "Bic\\Lib\\SDL2\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev",
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "optimize-autoloader": true,
        "secure-http": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
