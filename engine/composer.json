{
    "name": "serafim/bic-engine",
    "description": "Simple game-development application framework",
    "require": {
        "php": "^8.1",
        "ext-ffi": "*",
        "phplrt/lexer": "^3.2",
        "phplrt/parser": "^3.2",
        "serafim/ffi-sdl": "^1.0",
        "serafim/ffi-sdl-image": "^1.0",
        "serafim/ffi-sdl-ttf": "^1.0",
        "vlucas/phpdotenv": "^4.0",
        "illuminate/support": "~7.2",
        "illuminate/container": "~7.2",
        "illuminate/config": "~7.2"
    },
    "autoload": {
        "psr-4": {
            "Serafim\\Bic\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4|^6.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
