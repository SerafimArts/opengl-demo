{
    "name": "bic-engine/engine",
    "license": "MIT",
    "repositories": [
        {"type": "path", "url": "libs/audio"},
        {"type": "path", "url": "libs/dispatcher"},
        {"type": "path", "url": "libs/foundation"},
        {"type": "path", "url": "libs/lib-bass"},
        {"type": "path", "url": "libs/lib-sdl2"},
        {"type": "path", "url": "libs/loop"},
        {"type": "path", "url": "libs/ui"},
        {"type": "path", "url": "libs/ui-sdl2"},
        {"type": "path", "url": "libs/var-dumper"}
    ],
    "require": {
        "php-64bit": "^8.1",
        "ext-ffi": "*",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.1",
        "bic-engine/audio": "^1.0",
        "bic-engine/dispatcher": "^1.0",
        "bic-engine/foundation": "^1.0",
        "bic-engine/lib-bass": "^1.0",
        "bic-engine/lib-sdl2": "^1.0",
        "bic-engine/loop": "^1.0",
        "bic-engine/ui": "^1.0",
        "bic-engine/ui-sdl2": "^1.0",
        "bic-engine/var-dumper": "^1.0",
        "symfony/process": "^5.4|^6.0",
        "symfony/cache": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "symfony/var-dumper": "^5.4|^6.1",
        "cache/filesystem-adapter": "^1.2",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.24"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "optimize-autoloader": true,
        "secure-http": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
