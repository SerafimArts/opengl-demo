{
    "name": "serafim/battleground",
    "repositories": [
        {"type": "path", "url": "engine"},
        {"type": "path", "url": "libs/ui"},
        {"type": "path", "url": "libs/ui-sdl"}
    ],
    "require": {
        "php": "^8.1",
        "ext-ffi": "*",
        "ext-json": "*",
        "bic-engine/ui-sdl": "*",
        "serafim/ffi-ide-helper": "^1.0",
        "serafim/bic-engine": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "vimeo/psalm": "^4.28",
        "symfony/var-dumper": "^5.4|^6.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
