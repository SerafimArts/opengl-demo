{
    "name": "bic-engine/engine",
    "license": "MIT",
    "repositories": [
        {"type": "path", "url": "libs/audio"},
        {"type": "path", "url": "libs/dispatcher"},
        {"type": "path", "url": "libs/foundation"},
        {"type": "path", "url": "libs/front-controller"},
        {"type": "path", "url": "libs/lib-bass"},
        {"type": "path", "url": "libs/lib-sdl2"},
        {"type": "path", "url": "libs/renderer"},
        {"type": "path", "url": "libs/ui"},
        {"type": "path", "url": "libs/ui-sdl2"},
        {"type": "path", "url": "libs/var-dumper"}
    ],
    "require": {
        "php-64bit": "^8.1",
        "ext-ffi": "*",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^3.1",
        "bic-engine/audio": "^1.0",
        "bic-engine/dispatcher": "^1.0",
        "bic-engine/foundation": "^1.0",
        "bic-engine/front-controller": "^1.0",
        "bic-engine/lib-bass": "^1.0",
        "bic-engine/lib-sdl2": "^1.0",
        "bic-engine/renderer": "^1.0",
        "bic-engine/ui": "^1.0",
        "bic-engine/ui-sdl2": "^1.0",
        "bic-engine/var-dumper": "^1.0",
        "symfony/process": "^5.4|^6.0",
        "symfony/cache": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "phing/phing": "^3.0.0-RC3",
        "guzzlehttp/guzzle": "^7.5",
        "nunomaduro/collision": "^6.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "symfony/var-dumper": "^5.4|^6.1",
        "cache/filesystem-adapter": "^1.2",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.24"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "phing binaries-download:platform",
            "phing run"
        ]
    },
    "replace": {
        "phing/task-analyzers": "*",
        "phing/task-apigen": "*",
        "phing/task-aws": "*",
        "phing/task-coverage": "*",
        "phing/task-dbdeploy": "*",
        "phing/task-ftpdeploy": "*",
        "phing/task-git": "*",
        "phing/task-hg": "*",
        "phing/task-inifile": "*",
        "phing/task-ioncube": "*",
        "phing/task-jshint": "*",
        "phing/task-jsmin": "*",
        "phing/task-liquibase": "*",
        "phing/task-phkpackage": "*",
        "phing/task-phpdoc": "*",
        "phing/task-phpunit": "*",
        "phing/task-sass": "*",
        "phing/task-smarty": "*",
        "phing/task-ssh": "*",
        "phing/task-svn": "*",
        "phing/task-visualizer": "*",
        "phing/task-zendcodeanalyser": "*",
        "phing/task-zendserverdevelopmenttools": "*"
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "optimize-autoloader": true,
        "secure-http": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
