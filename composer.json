{
    "name": "serafim/battleground",
    "repositories": [
        {
            "type": "path",
            "url": "engine"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-ffi": "*",
        "ext-json": "*",
        "serafim/ffi-ide-helper": "^1.0",
        "serafim/bic-engine": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4|^6.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
