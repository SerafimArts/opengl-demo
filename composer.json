{
    "name": "serafim/opengl-demo",
    "repositories": [
        {"type": "path", "url": "engine"},
        {"type": "path", "url": "libs/binaries"},
        {"type": "path", "url": "libs/image"},
        {"type": "path", "url": "libs/image-sdl"},
        {"type": "path", "url": "libs/math"},
        {"type": "path", "url": "libs/stream"},
        {"type": "path", "url": "libs/ui"},
        {"type": "path", "url": "libs/ui-sdl"}
    ],
    "require": {
        "php": "^8.1",
        "ext-ffi": "*",
        "ext-json": "*",
        "local/binaries": "^1.0",
        "bic-engine/stream": "^1.0",
        "bic-engine/math": "^1.0",
        "bic-engine/image": "^1.0",
        "bic-engine/image-sdl": "^1.0",
        "bic-engine/ui-sdl": "^1.0",
        "serafim/ffi-ide-helper": "^1.0",
        "serafim/bic-engine": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "vimeo/psalm": "^4.28",
        "symfony/var-dumper": "^5.4|^6.0"
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "local/binaries": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
